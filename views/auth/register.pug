extends ../layout/index

block contenido
    div(class="py-10")  
        h1(class="text-4xl my-10 font-extrabold text-center text-purple-500") Real
            span.font-normal.text-black Estate
        h2(class="text-center text-2xl font-extrabold")= page
        
        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-white py-8 px-4 shadow")
                form
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-semibold(for="name") Your Name:
                        
                        input#name.w-full.px-2.py-4.border.border-purple-600.cursor-text.rounded-lg.placeholder-purple-300(placeholder="Your Name here baby" tabindex=1 name="name" type="text")
                    div 
                        label.block.my-5.text-sm.uppercase.text-gray-600.mb-2.font-semibold(for="userEmail") Your email:

                        input#userEmail.w-full.px-2.py-4.border.border-purple-600.cursor-text.rounded-lg.placeholder-purple-300(placeholder="example@example.com" tabindex=2 name="userEmail" type="email")
                    div 
                        label.block.my-5.text-sm.uppercase.text-gray-600.mb-2.font-semibold(for="password") Password:

                        input#password.w-full.px-2.py-4.border.border-purple-600.cursor-text.rounded-lg.placeholder-purple-300(placeholder="******" tabindex=3 name="password" type="password")
                    div 
                        label.block.my-5.text-sm.uppercase.text-gray-600.mb-2.font-semibold(for="repeatpassword") Repeat your password:

                        input#repeatpassword.w-full.px-2.py-4.border.border-purple-600.cursor-text.rounded-lg.placeholder-purple-300(placeholder="Repeat it" tabindex=4 name="repeatpassword" type="password")