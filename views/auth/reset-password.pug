extends ../layout/index

block contenido 
    div(class="pb-10")  
        h1(class="text-4xl my-10 font-extrabold text-center text-purple-500") Real
            span.font-normal.text-black Estate
        h2(class="text-center text-2xl font-bold")= page
        if errors 
            div(class="max-w-md my-10 mx-auto")
                each error in errors
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg
        div(class="mt-8 mx-auto max-w-md bg-white py-8 px-4 shadow")
            div
                form(method="POST" noVaolidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.my-5.text-sm.uppercase.text-gray-600.mb-2.font-semibold(for="password") Set your new password:
                        input#password.w-full.px-2.py-4.border.border-purple-600.cursor-text.rounded-lg.placeholder-purple-300(placeholder="******" tabindex=2 name="password" type="password")
                    
                    input(type="submit", value="Save password" class="w-full bg-purple-500 hover:bg-purple-700 cursor-pointer text-white font-bold py-3 mt-8 rounded-xl")